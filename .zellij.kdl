layout {
    // Default template for all tabs (including new ones created later)
    // This adds the tab bar at the bottom
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
    }

    // First tab with custom two-pane layout
    tab name="Main" {
        pane split_direction="vertical" {
            pane size="65%" borderless=true {
                command "nvim"
            }
            pane {
              command "zsh"
              args "-lc" "claude --system-prompt-file /home/jwilger/.claude/system-prompt.md --dangerously-skip-permissions"
            }
        }
    }
}
