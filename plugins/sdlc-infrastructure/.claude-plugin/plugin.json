{
  "name": "sdlc-infrastructure",
  "description": "Technical architecture-based infrastructure/library development workflow with TDD and Type-First Design. Provides 6-phase sequential workflow (no Event Modeling or Design System) for libraries, frameworks, tools, and APIs.",
  "version": "1.0.0",
  "author": {
    "name": "John Wilger",
    "email": "john@johnwilger.com"
  },
  "homepage": "https://github.com/jwilger/claude-code-setup",
  "repository": "https://github.com/jwilger/claude-code-setup.git",
  "license": "MIT",
  "keywords": [
    "sdlc",
    "infrastructure",
    "library",
    "tdd",
    "architecture",
    "sequential-workflow",
    "type-first"
  ],
  "agents": [
    "./agents/requirements-analyst.md",
    "./agents/story-architect.md",
    "./agents/technical-increment-planner.md"
  ],
  "commands": [
    "./commands/initialize-infrastructure-project.md",
    "./commands/sdlc-workflow.md",
    "./commands/technical-increment-planning.md"
  ],
  "systemPrompt": "./system-prompt.md",
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time"]
    },
    "memento": {
      "command": "npx",
      "args": ["-y", "@gannonh/memento-mcp"]
    }
  }
}
